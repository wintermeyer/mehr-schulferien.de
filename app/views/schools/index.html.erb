<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>City</th>
      <th>Address line1</th>
      <th>Address line2</th>
      <th>Street</th>
      <th>Zip code</th>
      <th>Address city name</th>
      <th>Phone number</th>
      <th>Fax number</th>
      <th>Email</th>
      <th>Homepage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.slug %></td>
        <td><%= school.city %></td>
        <td><%= school.address_line1 %></td>
        <td><%= school.address_line2 %></td>
        <td><%= school.street %></td>
        <td><%= school.zip_code %></td>
        <td><%= school.address_city_name %></td>
        <td><%= school.phone_number %></td>
        <td><%= school.fax_number %></td>
        <td><%= school.email %></td>
        <td><%= school.homepage %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

